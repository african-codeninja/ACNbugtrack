<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>ACN Bug Tracer Admin - HTML5 Admin Template</title>
    <meta name="description" content="ACN Admin - HTML5 Admin Template">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="apple-touch-icon" href="apple-icon.png">
    <link rel="shortcut icon" href="favicon.ico">

    <script src="~/Scripts/popper.js"></script>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/themify-icons.css">
    <link rel="stylesheet" href="~/Content/flag-icon.min.css">
    <link rel="stylesheet" href="~/Content/cs-skin-elastic.css">
    <link rel="stylesheet" href="~/Content/dataTables.bootstrap4.min.css">
    <link rel="Stylesheet" href="~/Content/buttons.bootstrap4.min.css" />
    <link rel="stylesheet" href="~/Content/jqvmap.min.css">
    <link href="~/Content/datatables.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/Content/style.css">

    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.js"></script>

    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800' rel='stylesheet' type='text/css'>

   
    <style>
        body {
            background-image: url('../../images/Appbackground.jpg');
            background-repeat: no-repeat;
            background-size: 100%;
        }
    </style>

</head>

<body>


    <!-- Left Panel -->

    <aside id="left-panel" class="left-panel">
        <nav class="navbar navbar-expand-sm navbar-default">

            <div class="navbar-header">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#main-menu" aria-controls="main-menu" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fa fa-bars"></i>
                </button>
                <a class="navbar-brand" href="./"><img src="~/images/logo2 Copy.png" alt=""></a>
                @*<a class="navbar-brand" href="./"><img src="~/images/logo2 Copy.png" alt=""></a>*@
            </div>

            <div id="main-menu" class="main-menu collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="active">
                        <a href="@Url.Action("Index","Home") "> <i class="menu-icon fa fa-dashboard"></i>ACN Dashboard </a>
                    </li>
                    @if (User.IsInRole("Admin"))
                    {
                        <h3 class="menu-title">User Management</h3><!-- /.menu-title -->
                        <li class="menu-item-has-children dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> <i class="menu-icon fa fa-laptop"></i>User Administration</a>
                            <ul class="sub-menu children dropdown-menu">
                                <li><i class="fa fa-id-badge"></i><a href="@Url.Action("UserIndex","Admin")">Project Users</a></li>
                                @*<li><i class="fa fa-id-badge"></i><a href="@Url.Action("ManageUser","Admin")">Manage Users</a></li>*@
                                <li><i class="fa fa-id-badge"></i><a href="@Url.Action("ManageRoles","Admin")">Manage User Roles</a></li>
                                @*<li><i class="fa fa-id-badge"></i><a href="@Url.Action("ManageUserRole","Admin")">Manage User Projects</a></li>*@

                            </ul>
                        </li>
                    }
                    <h3 class="menu-title">Tickets Management</h3><!-- /.menu-title -->

                    <li class="menu-item-has-children dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> <i class="menu-icon fa fa-tasks"></i>Ticket Management</a>
                        <ul class="sub-menu children dropdown-menu">
                            <li><i class="fa fa-book"></i><a href="@Url.Action("MyIndex","Tickets")">Tickets Home</a></li>
                            @if (User.IsInRole("Admin") || User.IsInRole("ProjectManager"))
                            {
                                <li><i class="fa fa-book"></i><a href="@Url.Action("Index", "TicketComments")">Tickets Comments</a></li>
                                <li><i class="fa fa-book"></i><a href="@Url.Action("Index", "TicketNotifications")">Ticket Notifications</a></li>
                                <li><i class="fa fa-book"></i><a href="@Url.Action("Index", "TicketHistories")">Ticket Histories</a></li>
                            }
                        </ul>
                    </li>
                    @if (User.IsInRole("Admin") || User.IsInRole("ProjectManager"))
                    {
                        <h3 class="menu-title">Project Management</h3>

                        <li class="menu-item-has-children dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> <i class="menu-icon fa fa-tasks"></i>Project Administration</a>
                            <ul class="sub-menu children dropdown-menu">

                                <li><i class="fa fa-book"></i><a href="@Url.Action("Index", "projects")">Manage User Projects</a></li>
                                <li><i class="fa fa-book"></i><a href="@Url.Action("MyProjectsIndex", "Projects")">Project Index</a></li>

                            </ul>
                        </li>
                    }
                    <li>

                        <h3 class="menu-title">User Profile</h3>
                        @if (User.IsInRole("Admin") || User.IsInRole("ProjectManager"))
                        {
                        <li class="menu-item-has-children dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> <i class="menu-icon fa fa-user"></i>App Manager</a>
                            <ul class="sub-menu children dropdown-menu">
                                <li><i class="fa fa-book"></i><a href="@Url.Action("userAdminIndex", "Account")">User Profile Management</a></li>
                                <li><i class="fa fa-book"></i><a href="">Log Out</a></li>
                            </ul>

                        </li>
                    }
                    </ul>
                </div><!-- /.navbar-collapse -->
            </nav>
        </aside><!-- /#left-panel -->
        <!-- Left Panel -->
        <!-- Right Panel -->

        <div id="right-panel" class="right-panel">

            <!-- Header-->
            <header id="header" class="header">

                <div class="header-menu">

                    <div class="col-sm-7">
                        <a id="menuToggle" class="menutoggle pull-left"><i class="fa fa fa-tasks"></i></a>
                        <div class="header-left">
                            <button class="search-trigger"><i class="fa fa-search"></i></button>
                            <div class="form-inline">
                                <form class="search-form">
                                    <input class="form-control mr-sm-2" type="text" placeholder="Search ..." aria-label="Search">
                                    <button class="search-close" type="submit"><i class="fa fa-close"></i></button>
                                </form>
                            </div>
                            <div class="dropdown for-notification">
                                <button class="btn btn-secondary dropdown-toggle" type="button" id="notification" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="fa fa-bell"></i>
                                    <span class="count bg-danger">@NotificationHelper.GetAllUserNotificationCount()</span>
                                </button>
                                <div class="dropdown-menu" aria-labelledby="message">
                                    <div class="content">
                                        <ul>
                                            @foreach (var notification in NotificationHelper.GetreadUserNotifications().ToList())
                                            {
                                                <li>
                                                    <hr size=6 />
                                                    @using (Html.BeginForm("MarkAsRead", "TicketNotifications"))
                                                    {
                                                        @Html.AntiForgeryToken();
                                                        @Html.Hidden("Id", notification.Id);
                                                        <div class="row">
                                                            <div class="col-md-12">
                                                                <img src="@notification.Sender.AvatarUrl" alt="@notification.Sender.Email" class="img-circle" width="25" /><br />
                                                            </div>
                                                        </div>
                                                        <br />
                                                        <div class="row">
                                                            <div class="col-md-12">
                                                                <span class="title">@notification.Subject</span>
                                                            </div>
                                                        </div>
                                                        <br />
                                                        <div class="row">
                                                            <div class="col-md-12 text-center">
                                                                <button type="submit" class="btn btn-sm btn-primary">Mark as read</button>
                                                            </div>
                                                        </div>
                                                        <hr size=6 />
                                                    }
                                                </li>
                                            }
                                        </ul>
                                        <hr />
                                        <div class="text-right">
                                            <a href="@Url.Action("Index", "TicketNotifications")" class="ti-view-list">View All</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="dropdown for-message">
                                <button class="btn btn-secondary dropdown-toggle" type="button"
                                        id="message"
                                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="ti-email"></i>
                                    <span class="count bg-primary">@NotificationHelper.GetNewUserNotificationCount()</span>
                                </button>
                                <div class="dropdown-menu" aria-labelledby="message">
                                    <div class="content">
                                        <ul>
                                            @foreach (var notification in NotificationHelper.GetUnreadUserNotifications().ToList())
                                            {
                                                <li>
                                                    <hr size=6 />
                                                    @using (Html.BeginForm("MarkAsRead", "TicketNotifications"))
                                                    {
                                                        @Html.AntiForgeryToken();
                                                        @Html.Hidden("Id", notification.Id);
                                                        <div class="row">
                                                            <div class="col-md-12">
                                                                <img src="@notification.Sender.AvatarUrl" alt="@notification.Sender.Email" class="img-circle" width="25" /><br />
                                                            </div>
                                                        </div>
                                                        <br />
                                                        <div class="row">
                                                            <div class="col-md-12">
                                                                <span class="title">@notification.Subject</span>
                                                            </div>
                                                        </div>
                                                        <br />
                                                        <div class="row" >
                                                            <div class="col-md-12 text-center">
                                                                <button type="submit" class="btn btn-sm btn-primary">Mark as read</button>
                                                            </div>
                                                        </div>
                                                        <hr size=6 />
                                                    }
                                                </li>
                                            }
                                        </ul>
                                        <hr />
                                        <div class="text-right">
                                            <a href="@Url.Action("Index", "TicketNotifications")" class="ti-view-list">View All</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    @{
                        ApplicationUser user = null;
                        var userId = User.Identity.GetUserId();
                        var db = new ApplicationDbContext();
                        if (!string.IsNullOrEmpty(userId))
                        {
                            user = db.Users.Find(userId);
                        }
                    }
                    @if (user != null && user.AvatarUrl != null)
                    {

                        <div class="col-sm-5">
                            <div class="user-area dropdown float-right">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <img class="user-avatar rounded-circle" src="@user.AvatarUrl" alt="@user.FullName" data-lock-picture="@user.AvatarUrl" />
                                </a>
                                <div class="profile-info" data-lock-name="John Doe" data-lock-email="johndoe@JSOFT.com">
                                    <span class="name">@user.FullName</span>
                                    <span class="name">@user.DisplayName</span>
                                    <span class="role"></span>
                                </div>
                                <div class="user-menu dropdown-menu">
                                   <!--Removed some links that were not bieng used-->
                                    @using (Html.BeginForm("LogOff", "Account"))
                                    {
                                        @Html.AntiForgeryToken()
                                        <button type="submit">Logout</button>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>

            </header>
            <!-- /header -->
            <!-- Header-->


            @RenderBody()
            <div class="col-10">
                <footer>
                    <p>&copy; @DateTime.Now.Year - Moses Mbutha Mwangi</p>
                </footer>
            </div>

        </div>

        <script src="~/Scripts/jquery.min.js"></script>
        <script src="~/Scripts/popper.min.js"></script>
        <script src="~/Scripts/popper.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>
        <script src="~/Scripts/main.js"></script>

        <script src="~/Scripts/Chart.bundle.min.js"></script>
        <script src="~/Scripts/dashboard.js"></script>
        <script src="~/Scripts/widgets.js"></script>
        <script src="~/Scripts/jquery.vmap.min.js"></script>
        <script src="~/Scripts/jquery.vmap.sampledata.js"></script>
        <script src="~/Scripts/jquery.vmap.world.js"></script>
        <script src="~/Scripts/jquery.dataTables.min.js"></script>
        <script src="~/Scripts/dataTables.bootstrap4.min.js"></script>
        <script src="~/Scripts/dataTables.buttons.min.js"></script>
        <script src="~/Scripts/buttons.bootstrap4.min.js"></script>
        <script src="~/Scripts/jszip.min.js"></script>
        <script src="~/Scripts/buttons.html5.min.js"></script>
        <script src="~/Scripts/buttons.print.min.js"></script>
        <script src="~/Scripts/buttons.colVis.js"></script>
        <script src="~/Scripts/datatables-init.js"></script>
        <script src="~/Scripts/datatables.min.js"></script>

        @*@Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/bootstrap")*@


        <script>
            (function ($) {
                "use strict";

                jQuery('#vmap').vectorMap({
                    map: 'world_en',
                    backgroundColor: null,
                    color: '#ffffff',
                    hoverOpacity: 0.7,
                    selectedColor: '#1de9b6',
                    enableZoom: true,
                    showTooltip: true,
                    values: sample_data,
                    scaleColors: ['#1de9b6', '#03a9f5'],
                    normalizeFunction: 'polynomial'
                });
            })(jQuery);
        </script>

        <script>
            jQuery('#myTable').DataTable( {
            dom: 'Bfrtip', buttons: ['colvis', 'excel', 'pdf', 'print'],
                            
            } );
        </script>            
        @RenderSection("scripts", required: false)

    </body>

</html>
