@using ACNbugtracker.Helper
@using ACNbugtracker.Models
@using Microsoft.AspNet.Identity
<!doctype html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7" lang=""> <![endif]-->
