@model IEnumerable<ACNbugtracker.Models.TicketNotification>

<div class="col-lg-12">
    @if (User.IsInRole("Admin"))
    {
        <div class="alert alert-danger" role="alert">
            @Html.ActionLink("CREAT NEW TICKET NOTIFICATION", "Create")
        </div>
    }
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header bg-success">
                <strong class="card-title text-light">TICKET NOTIFICATION</strong>
            </div>
            <div class="card-body text-white bg-primary">
                <table class="table">
                    <thead class="thead-dark text-light">
                        <tr>
                            @if (User.IsInRole("Admin") || User.IsInRole("ProjectManager"))
                            {
                                <th>
                                    @Html.DisplayNameFor(model => model.Recipient.FirstName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Sender.FirstName)
                                </th>
                            }
                            <th>
                                @Html.DisplayNameFor(model => model.Ticket.OwnerUser.FirstName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Created)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Subject)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NotificationBoody)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Read)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                @if(User.IsInRole("Admin") || User.IsInRole("ProjectManager"))
                                {
                                  <td>
                                    @Html.DisplayFor(modelItem => item.Recipient.FirstName)
                                  </td>

                                 <td>
                                    @Html.DisplayFor(modelItem => item.Sender.FirstName)
                                </td>
                                }
                                
                                <td>
                                    @Html.DisplayFor(modelItem => item.Ticket.OwnerUserId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Created)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Subject)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NotificationBoody)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Read)
                                </td>
                                <td>
                                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <div class="alert alert-danger" role="alert">
                                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                        </div>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>

</div>
