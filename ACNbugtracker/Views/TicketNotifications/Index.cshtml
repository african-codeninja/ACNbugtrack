@model IEnumerable<ACNbugtracker.Models.TicketNotification>


<!DOCTYPE html>


    <div class="col-lg-12">
        @if(User.IsInRole("Admin"))
        {
        <div class="alert alert-danger" role="alert">
            @Html.ActionLink("CREAT NEW TICKET NOTIFICATION", "Create")
        </div>
        }             
        <div class="col-lg-12 ">
            <div class="card">
                <div class="card-header">
                    <strong class="card-title ">TICKET NOTIFICATIONS</strong>
                </div>
                <div class="card-body">
                    <table id="bootstrap-data-table-export" class="table table-striped table-bordered table-responsive-sm table-responsive-sm">
                        <thead class="thead-dark text-light">
                            <tr>
                                <th>
                                    Reciepient
                                </th>
                                <th>
                                    Sender
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Ticket.OwnerUserId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Created)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Subject)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.NotificationBoody)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Read)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Recipient.FirstName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Sender.FirstName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Ticket.OwnerUser.FirstName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Created)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Subject)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NotificationBoody)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Read)
                                </td>
                                @if (User.IsInRole("Admin"))
                                {
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                    </td>
                                }
                            </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>

    </div>
