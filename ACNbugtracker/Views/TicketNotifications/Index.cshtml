@model IEnumerable<ACNbugtracker.Models.TicketNotification>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div class="col-lg-12">
        @if(User.IsInRole("Admin"))
        {
        <div class="alert alert-danger" role="alert">
            @Html.ActionLink("CREAT NEW TICKET NOTIFICATION", "Create")
        </div>
        }             
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header bg-success">
                    <strong class="card-title text-light">TICKET NOTIFICATION</strong>
                </div>
                <div class="card-body text-white bg-primary">
                    <table class="table">
                        <thead class="thead-dark text-light">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Recipient.FirstName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Sender.FirstName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Ticket.OwnerUserId)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Created)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Subject)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.NotificationBoody)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Read)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Recipient.FirstName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Sender.FirstName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Ticket.OwnerUserId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Created)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Subject)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NotificationBoody)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Read)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>

    </div>
    </body>
</html>
