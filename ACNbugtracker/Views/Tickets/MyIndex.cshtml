@using ACNbugtracker.Helper
@model IEnumerable<ACNbugtracker.Models.Ticket>

@{
    ViewBag.Title = "Index";
    var linkHelper = new NavHelper();
}
<!doctype html>
<html>
<body>
<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">TICKETS BELONGING TO PROJECTS I BELONG TO</strong>
                    </div>
                    <div class="card-body">
                        <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                            <thead class="thead-dark text-light">
                                <tr>
                                    <!--1-->
                                    <th>
                                        @Html.DisplayName("Developer")
                                    </th>
                                    <!--2-->
                                    <th>
                                        @Html.DisplayName("Submitter")
                                    </th>
                                    <!--3-->
                                    <th>
                                        @Html.DisplayName("Project")
                                    </th>
                                    <!--4-->
                                    <th>
                                        @Html.DisplayName("Priority")
                                    </th>
                                    <!--5-->
                                    <th>
                                        @Html.DisplayName("Status")
                                    </th>
                                    <!--6-->
                                    <th>
                                        @Html.DisplayName("Type")
                                    </th>
                                    <!--7-->
                                    <th>
                                        @Html.DisplayNameFor(model => model.Title)
                                    </th>
                                    <!--8-->
                                    <th>
                                        @Html.DisplayNameFor(model => model.Description)
                                    </th>
                                    <!--9-->
                                    <th>
                                        @Html.DisplayNameFor(model => model.Created)
                                    </th>
                                    <!--10-->
                                    <th>
                                        @Html.DisplayNameFor(model => model.Updated)
                                    </th>
                                    <!--11-->
                                    <th>
                                        @Html.DisplayName("Contol")
                                    </th>
                                </tr>
                            </thead>

                            @foreach (var item in Model)
                            {
                                <tbody>
                                    <tr>
                                        <!--1-->
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AssignedToUser.FirstName)
                                        </td>
                                        <!--2-->
                                        <td>
                                            @Html.DisplayFor(modelItem => item.OwnerUser.FirstName)
                                        </td>
                                        <!--3-->
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Project.Name)
                                        </td>
                                        <!--4-->
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TicketPriority.Name)
                                        </td>
                                        <!--5-->
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TicketStatus.Name)
                                        </td>
                                        <!--6-->
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TicketType.Name)
                                        </td>
                                        <!--7-->
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Title)
                                        </td>
                                        <!--8-->
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Description)
                                        </td>
                                        <!--9-->
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Created)
                                        </td>
                                        <!--10-->
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Updated)
                                        </td>
                                        <!--11-->
                                        <td>
                                            @if (User.IsInRole("Admin") && User.IsInRole("ProjectManager"))
                                            {
                                                @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                                            }
                                            @Html.ActionLink("Dashboard", "Details", new { id = item.Id })
                                            @*@Html.ActionLink("Dashboard", "Dashboard" , new { id = item.Id }) |*@
                                            @if (User.IsInRole("Admin"))
                                            {
                                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                            }
                                            @Html.ActionLink("Assign Ticket", "AssignTicket", new { id = item.Id })
                                        </td>

                                    </tr>
                                </tbody>
                            }

                        </table>

                    </div>

                </div>

            </div>
        </div>
    </div>
</div>
</body>
</html>