@model ACNbugtracker.Models.Project

@{
    ViewBag.Title = "Details";
}

    <p>
        <h3>ASSIGNING PERSONEL TO PROJECTS</h3>
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
    @using(Html.BeginForm("ManageProjectUsers", "Admin", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("ProjectId", Model.Id)
            <div class="row">
                <div class="col-lg-4">
                    <h2>Project Manager</h2>
                    @Html.ListBox("ProjectManagers")
                </div>
                    
                <div class="col-lg-4">
                    <h2>Developers</h2>
                    @Html.ListBox("Developers")
                </div>

                <div class="col-lg-4">
                    <h2>Submitters</h2>
                    @Html.ListBox("Submitters")
                </div>
            </div>
            <p></p>
            <div class="row">
                <div class="col-md-12">
                    <button type="submit" class="btn btn-primary btn-lg">Assign Project</button>
                </div>
            </div>
    }