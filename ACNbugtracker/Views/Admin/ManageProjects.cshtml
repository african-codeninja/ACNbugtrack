@model ACNbugtracker.Models.UserProfileViewModel

@{
    ViewBag.Title = "ManageProjectUsers";
}

<!DOCTYPE html>


<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <strong class="card-title">PROJECT ASSIGNMENT</strong>
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.Hidden("UserId", (string)ViewBag.UserId)

                @Html.Display(User.Identity.Name)

                <div class="form-group">
                    @Html.Label("ASSIGN THIS USER TO A PROJECT", null, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col=md-10">
                        @Html.DropDownList("Projects", null, "--Select Project---", htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    <button type="submit" value="Assign" btn btn-primary">Assign the User a Project Now</button>
                </div>

                @Html.ActionLink("BACK TO USER INDEX", "UserIndex", "Admin")
            }
        </div>
    </div>
</div>
