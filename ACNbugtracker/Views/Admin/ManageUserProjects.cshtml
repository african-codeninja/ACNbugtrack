@model ACNbugtracker.Models.Project

@using ACNbugtracker.Helper
@using ACNbugtracker.Models

@{
    ViewBag.Title = "Details";
    var projectHelper = new ProjectsHelper();
}

<div class="content mt-lg-4">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <strong class="card-title">Assigned Personel currently working on this project</strong>
                    </div>
                    <div class="card-body">
                        <table id="data-table-combine" class="table table-striped table-bordered table-responsive-sm">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayName("Project Manager")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Developer(s)")
                                    </th>
                                    <th>
                                        @Html.DisplayName("Submitter(s)")
                                    </th>
                                </tr>
                            </thead>
                            <tr>
                                <td>
                                    @Html.DisplayFor(model => model.Name)
                                </td>
                                <td>
                                    @foreach (var user in projectHelper.UserInRoleOnProject(Model.Id, "ProjectManager"))
                                    {
                                        @user <br />
                                    }
                                </td>
                                <td>
                                    @foreach (var user in projectHelper.UserInRoleOnProject(Model.Id, "Developer"))
                                    {
                                        @user <br />

                                    }
                                </td>
                                <td>
                                    @foreach (var user in projectHelper.UserInRoleOnProject(Model.Id, "Submitter"))
                                    {
                                        @user <br />

                                    }
                            </tr>

                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="col-md-12">
    <div class="alert alert-primary" role="alert">
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) | @Html.ActionLink("Back to List", "Index")
    </div>
</div>

<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <strong class="card-title">ASSIGN THIS USER TO PROJECTS</strong>
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.Hidden("UserId", (string)ViewBag.UserId)

                @Html.Display(User.Identity.Name)
                <div class="col-md-offset-2 col-md-5">
                    @Html.DropDownList("Users", null, "--Select User--", htmlAttributes: new { @class = "form-control" })
                </div>
                <div class="col-md-offset-1 col-md-3">
                    @Html.ListBox("Projects", null, htmlAttributes: new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <button type="submit" value="Assign" btn btn-primary">Assign the User a Project Now</button>
                </div>
                @Html.ActionLink("BACK TO USER INDEX", "UserIndex", "Admin")
            }
        </div>
    </div>
</div>