@{ 
    ViewBag.Title = "ManageUserRole";
}


<h2>Managing an Individual Users role</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.Hidden("UserId",(string)ViewBag.UserId)

    <br />
    <div class="form-group">
        @Html.Label("ASSIGN ROLE", null, htmlAttributes: new { @class = "control-label col-md-2"})
        <div class="col=md-10">
            @Html.DropDownList("UserRole", null,"--Select Role---", htmlAttributes: new { @class = "form-control"})
        </div>
    </div>

    <div class="form-group">
            <button type="submit" value="Assign" btn btn-primary">Assign the User a Role Now</button>
    </div>
}