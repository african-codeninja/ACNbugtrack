<body class="bg-dark">
    <p></p>
    <div class="row text-center">
        <div class="col-md-1"></div>
        <div class="col-md-10 bg-light text-center">
            @*<button type="button" class="btn btn-primary btn-lg btn-block"><h1>WELCOME TO THE AFRICAN CODE NINJAS BUGTRACKER</h1></button>*@
            <h1>WELCOME TO THE AFRICAN CODE NINJAS BUGTRACKER</h1>
        </div>
        <div class="col-md-1"></div>
    </div>
    <div class="col-md-12">
        <p></p>
        <div class="col-lg-3 col-md-3">
            <div class="card" >
                <div class="card-header">
                    <strong class="card-title mb-3">Demo Admin</strong>
                </div>
                <div class="card-body">
                    <div class="mx-auto d-block">
                        <a href=""><img class="rounded-circle mx-auto d-block" src="~/images/admin-icon.jpg" alt="Card image cap" height="150px"></a>
                        <a href=""><h3 class="text-sm-center mt-2 mb-1">Administrator</h3></a>
                    </div>
                    <hr />
                    @using (Html.BeginForm("DemoLoginAsync", "Account", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.Hidden("DemoEmail", "DemoAdminEmail")                        
                        <button type="submit" class="btn btn-primary btn-lg btn-block">Login As Administrator</button>                      
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-3">
            <div class="card">
                <div class="card-header">
                    <strong class="card-title mb-3">Demo Project Manager</strong>
                </div>
                <div id="dmcard" class="card-body">
                    <div class="mx-auto d-block">
                        <a href=""><img class="rounded-circle mx-auto d-block" src="~/images/pm-icon.png" alt="Card image cap" height="150px></a>
                        <a href=""><h3 class="text-sm-center mt-2 mb-1">Project Manager</h3></a>
                    </div>
                    <hr />
                    @using (Html.BeginForm("DemoLoginAsync", "Account", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.Hidden("DemoEmail", "DemoProjectManagerEmail")                      
                        <button type="submit" class="btn btn-primary btn-lg btn-block">Login As Project Manager</button>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-3">
            <div class="card">
                <div class="card-header">
                    <strong class="card-title mb-3">Demo Developer</strong>
                </div>
                <div id="democard" class="card-body">
                    <div class="mx-auto d-block">
                        <a href=""><img class="rounded-circle mx-auto d-block" src="/images/dev-icon.png" alt="Card image cap" height="150px></a>
                        <a href=""><h3 class="text-sm-center mt-2 mb-1">Developer</h3></a>
                    </div>
                    <hr />
                    @using (Html.BeginForm("DemoLoginAsync", "Account", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.Hidden("DemoEmail", "DemoADeveloperEmail")                       
                        <button type="submit" class="btn btn-primary btn-lg btn-block">Login as Developer</button>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-3">
            <div class="card">
                <div class="card-header">
                    <strong class="card-title mb-3">Demo Submitter</strong>
                </div>
                <div id="submitcard" class="card-body">
                    <div class="mx-auto d-block">
                        <a href=""><img class="rounded-circle mx-auto d-block" src="/images/sub-icon.png" alt="Card image cap" height="150px></a>
                        <a href=""><h3 class="text-sm-center mt-2 mb-1">Submitter</h3></a>
                    </div>
                    <hr />
                    @using (Html.BeginForm("DemoLoginAsync", "Account", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.Hidden("DemoEmail", "DemoSubmitterEmail")                                            
                        <button type="submit" class="btn btn-primary btn-lg btn-block">Login as Submitter</button>
                    }
                </div>
            </div>
        </div>

        <script src="~/Scripts/jquery.min.js"></script>
        <script src="~/Scripts/popper.min.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>
        <script src="~/Scripts/main.js"></script>
    </div>
</body>

</html>