<body class="bg-dark">
    <p></p>
    <div class="row text-center">
        <div class="col-md-1"></div>
        <div class="col-md-10 bg-light text-center">
            @*<button type="button" class="btn btn-primary btn-lg btn-block"><h1>WELCOME TO THE AFRICAN CODE NINJAS BUGTRACKER</h1></button>*@
            <h1>WELCOME TO THE AFRICAN CODE NINJAS BUGTRACKER</h1>
        </div>
        <div class="col-md-1"></div>
    </div>
    <div class="col-md-12">
        <p></p>
        <div class="col-lg-3 col-md-3">
            <div class="card">
                <div class="card-header">
                    <strong class="card-title mb-3">Demo Admin</strong>
                </div>
                <div class="card-body">
                    <div class="mx-auto d-block">
                        <a href=""><img class="rounded-circle mx-auto d-block" src="/images/admin.jpg" alt="Card image cap"></a>
                        <a href=""><h3 class="text-sm-center mt-2 mb-1">Administrator</h3></a>
                    </div>
                    @using (Html.BeginForm("DemoLoginAsync", "Account", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.Hidden("DemoEmail", "DemoAdminEmail")
                        <hr>
                        <div class="card-text text-sm-center">
                            <div class="col-sm-12">
                                <ol>
                                    <h4>The Admin is allowed to:</h4>
                                    <li>Assign User Roles</li>
                                    <li>View All projects and their own projetcs</li>
                                    <li>Create, Edit and Achive Projects</li>
                                    <li>View Ticket Details</li>
                                    <li>Assign Users to Tickets</li>
                                    <li>Edit Ticket Type, Title and Description</li>
                                    <li>Edit Ticket Priority and Status</li>
                                    <li>Edit and Delete Ticket Comments and Attachemnts</li>
                                    <li>View Ticket Histories</li>
                                </ol>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary btn-lg btn-block">Login As Administrator</button>
                    }
                </div>
            </div>
        </div>

